<Window x:Class="Zachary_Renyhart_Assignment_3._3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zachary_Renyhart_Assignment_3._3._1"
        mc:Ignorable="d"
        Title="Names" Height="180" Width="260">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="12*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Margin="0,-6,110,124" Grid.RowSpan="2" Grid.ColumnSpan="2">Names</Label>
        <ListBox Grid.Row="1" x:Name="lstNames" Margin="0,20,0,0" Grid.ColumnSpan="2" />

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5,20,-1,-20">
            <TextBox x:Name="txtName" Height="14" TextWrapping="Wrap" Width="76"/>
            <Button x:Name="btnAdd" Click="ButtonAddName_Click" Content="Add Name"/>
        </StackPanel>
    </Grid>
</Window>
